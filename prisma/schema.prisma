generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id Int @id @default(autoincrement())
  nome String
  email String @unique
  senha String
}

model Aluno {
  id Int @id @default(autoincrement())
  nome String
  sobrenome String
  email String @unique
  idade Int
  peso Float
  altura Float
  fotos Foto[]
}

model Foto {
  id Int @id @default(autoincrement())
  originalname String
  filename String
  aluno_id Int?
  aluno Aluno? @relation(fields: [aluno_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
}